{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",

    "useDefineForClassFields": false,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "paths": {
      "~/*": ["./src/*"]
    }
  },

  "exclude": ["node_modules"]
}
